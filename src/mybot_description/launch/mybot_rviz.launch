<?xml version="1.0"?>
<launch>

  <param name="robot_description" command="$(find xacro)/xacro '$(find mybot_description)/urdf/mybot.xacro'"/>

  <!-- send fake joint values -->
  <node name="joint_state_publisher_1" pkg="joint_state_publisher" type="joint_state_publisher" args="/joint_states:=/robot1/joint_states" >
    <param name="use_gui" value="False"/>
  </node>

  <node name="joint_state_publisher_2" pkg="joint_state_publisher" type="joint_state_publisher" args="/joint_states:=/robot2/joint_states" >
    <param name="use_gui" value="False"/>
  </node>

  <!-- Combine joint values -->
  <node name="robot_state_publisher_1" pkg="robot_state_publisher" type="state_publisher" args="/joint_states:=/robot1/joint_states" />
  <node name="robot_state_publisher_2" pkg="robot_state_publisher" type="state_publisher" args="/joint_states:=/robot2/joint_states" />

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz"/>
  <!--node name="rviz" pkg="rviz" type="rviz" args="-d $(find mybot_description)/launch/myrobot.rviz"/-->

</launch>
